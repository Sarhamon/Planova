{
  "manifest_version": 3,
  "name": "Planova Extension",
  "version": "1.0.0",
  "description": "Planova 일정 관리 확장프로그램",
  "icons": {
    "16": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "oauth2": {
    "client_id": "__CLIENT_ID__",
    "scopes": ["profile", "email"]
  },
  "permissions": [
    "identity",
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": ["<all_urls>"]
}
